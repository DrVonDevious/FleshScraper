
<div class='game-screen'>

  <div class="controls-panel">
    <div class="player-view">
      <%# <img src="user_image_01.jpg"> %>
    </div>
    <div class="player-stats">
      HP: 10
      Attack: 20
      Defence: 3
      Speed: 1
    </div>
    <div class="player-commands">
      <div class="nav-commands">
        <%# window.location returns the current browser url using JS. %>
        <div class="nav-button">
          <%= button_tag "", { class: "nav-nw", onclick: "window.location = '/move/northwest'" } %>
        </div>
        <div class="nav-button">
          <%= button_tag "", { class: "nav-n", onclick: "window.location = '/move/north'" } %>
        </div>
        <div class="nav-button">
          <%= button_tag "",  { class: "nav-ne", onclick: "window.location = '/move/northeast'" } %>
        </div>
        <div class="nav-button">
          <%= button_tag "", { class: "nav-w", onclick: "window.location = '/move/west'" } %>
        </div>
        <div class="nav-button">
          <%= button_tag "Wait", { class: "nav-button", onclick: "window.location = '/nextturn'" } %>
        </div>
        <div class="nav-button">
          <%= button_tag "", { class: "nav-e", onclick: "window.location = '/move/east'" } %>
        </div>
        <div class="nav-button">
          <%= button_tag "", { class: "nav-sw", onclick: "window.location = '/move/southwest'" } %>
        </div>
        <div class="nav-button">
          <%= button_tag "", { class: "nav-s", onclick: "window.location = '/move/south'" } %>
        </div>
        <div class="nav-button">
          <%= button_tag "", { class: "nav-se", onclick: "window.location = '/move/southeast'" } %>
        </div>
      </div>
      <div class="action-commands">
        <%= button_tag "Use Item", { class: "action-button", onclick: "window.location = '#'" } %>
        <%= button_tag "Quit Game", { class: "action-button", onclick: "window.location = '#'" } %>
      </div>
    </div>
  </div>

  <div id="field", class='game-map'>
    <%=@game.print%>
    <script>
      player = document.getElementById("player")
      board = document.getElementById("field")
      board.scrollLeft = player.offsetLeft - board.offsetLeft - (board.clientWidth / 2)
      board.scrollTop = player.offsetTop - board.offsetTop - (board.clientHeight / 2)
    </script>
  </div>

</div>
